<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true">

        <com.allen.library.SuperTextView
            android:id="@+id/item_supText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:sLeftBottomTextColor="@color/black"
            app:sLeftBottomTextSize="@dimen/sp_12"
            app:sLeftBottomTextString="啊啊啊啊"
            app:sLeftIconRes="@mipmap/icon_charge_default"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_12"
            app:sLeftTextString="啊啊啊啊"
            app:sRightTextColor="@color/setting2_color"
            app:sRightTextSize="@dimen/sp_14"
            app:sRightTextString="下载"
            app:sUseRipple="false"
        />
    </androidx.cardview.widget.CardView>
</LinearLayout>